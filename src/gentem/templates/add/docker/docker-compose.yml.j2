version: '3.8'

services:
  {% if project_type == "fastapi" %}
  app:
    build: .
    ports:
      - "8000:8000"
    environment:
      - ENVIRONMENT=development
      - DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/{{ project_slug }}
    volumes:
      - .:/app
    depends_on:
      db:
        condition: service_healthy
    command: ["uvicorn", "{{ project_slug }}.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

  db:
    image: postgres:15-alpine
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: {{ project_slug }}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5
  {% else %}
  app:
    build: .
    ports:
      - "8080:8080"
    environment:
      - ENVIRONMENT=development
    volumes:
      - .:/app
    command: ["python", "-m", "{{ project_slug }}"]
  {% endif %}

volumes:
  {% if project_type == "fastapi" %}
  postgres_data:
  {% endif %}
