site_name: {{ project_name }}
site_description: {{ description or "A " + project_type + " project generated by Gentem." }}
site_author: {{ author }}
site_url: https://{{ project_slug }}.readthedocs.io/

repo_name: {{ author }}/{{ project_slug }}
repo_url: https://github.com/{{ author }}/{{ project_slug }}

docs_dir: docs
site_dir: site

nav:
  - Home: index.md
  - Getting Started: getting-started.md
  - API Reference: api.md

theme:
  name: material
  palette:
    primary: indigo
    accent: blue
  features:
    - navigation.tabs
    - navigation.sections
    - search.suggest
    - search.highlight

plugins:
  - search
  - mkdocstrings:
      handlers:
        python:
          selection:
            docstring_style: google
