name: CI

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]

env:
  python-version: '{{ python_version }}'

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['{{ python_versions|join("', '") }}']

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v5
      with:
        python-version: ${{ matrix.python-version }}

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        {% if project_type == "fastapi" %}
        pip install -r requirements.txt
        {% else %}
        pip install -e .
        {% endif %}
        pip install pytest pytest-cov

    - name: Run tests with pytest
      run: |
        pytest --cov={{ project_slug }} --cov-report=xml --cov-report=term tests/

    - name: Upload coverage to Codecov
      uses: codecov/codecov-action@v4
      with:
        files: ./coverage.xml
        flags: unittests
        name: codecov-umbrella
        fail_ci_if_error: false

  lint:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '{{ python_version }}'

    - name: Install linting tools
      run: |
        python -m pip install --upgrade pip
        pip install ruff black mypy

    - name: Check code formatting with Black
      run: black --check {{ project_slug }} tests/

    - name: Run ruff linter
      run: ruff check {{ project_slug }} tests/

    - name: Run mypy type checking
      run: mypy {{ project_slug }} tests/

{% if project_type == "fastapi" %}
  docker:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Build Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        push: false
        tags: {{ project_slug }}:latest
        load: true

{% endif %}

  notify:
    needs: [test, lint{% if project_type == "fastapi" %}, docker{% endif %}]
    runs-on: ubuntu-latest
    if: always()
    steps:
    - name: Check workflow status
      run: |
        if [[ {% raw %}${{ needs.test.result }}{% endraw %} == 'failure' ]] || [[ {% raw %}${{ needs.lint.result }}{% endraw %} == 'failure' ]]; then
          echo "Workflow failed"
          exit 1
        fi
        echo "Workflow passed"
