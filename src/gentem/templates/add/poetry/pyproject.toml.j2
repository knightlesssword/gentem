[tool.poetry]
name = "{{ project_slug }}"
version = "{{ version }}"
description = "{{ description or 'A Python project generated by Gentem.' }}"
authors = ["{{ author }} <{{ email }}>"]
license = "MIT"
readme = "README.md"
repository = "https://github.com/{{ author }}/{{ project_slug }}"
documentation = "https://github.com/{{ author }}/{{ project_slug }}#readme"
keywords = ["python", "{{ project_slug }}"]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: {{ python_version|replace('.', '') }}",
{% for py_ver in python_versions[1:] %}
    "Programming Language :: Python :: {{ py_ver|replace('.', '') }}",
{% endfor %}
    "Programming Language :: Python :: 3",
]

[tool.poetry.dependencies]
python = "^{{ python_version }}"
{% if project_type == "fastapi" %}
fastapi = "^0.109.0"
uvicorn = {extras = ["standard"], version = "^0.27.0"}
{% elif project_type == "cli" %}
typer = "^0.9.0"
rich = "^13.7.0"
{% else %}
{% endif %}

[tool.poetry.group.dev.dependencies]
pytest = "^8.0.0"
pytest-cov = "^4.1.0"
black = "^24.0.0"
ruff = "^0.8.0"
mypy = "^1.8.0"
{% if project_type == "fastapi" %}
pytest-asyncio = "^0.24.0"
httpx = "^0.26.0"
{% endif %}

[tool.poetry.scripts]
{% if project_type == "cli" %}
{{ project_slug }} = "{{ project_slug }}.main:main"
{% elif project_type == "fastapi" %}
{{ project_slug }}-api = "{{ project_slug }}.main:main"
{% endif %}

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.m2.api"

[tool.black]
line-length = 88
target-version = ['py{{ python_version|replace('.', '') }}']
include = '\.pyi?$'

[tool.ruff]
line-length = 88
target-version = "py{{ python_version|replace('.', '') }}"
select = [
    "E",  # pycodestyle errors
    "W",  # pycodestyle warnings
    "F",  # Pyflakes
    "I",  # isort
    "B",  # flake8-bugbear
    "C4", # flake8-comprehensions
    "UP", # pyupgrade
]
ignore = [
    "E501",  # line too long
    "B008",  # do not perform function calls in argument defaults
    "C901",  # too complex
]

[tool.mypy]
python_version = "{{ python_version }}"
warn_return_any = true
warn_unused_ignores = true
disallow_untyped_defs = false
